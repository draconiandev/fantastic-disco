<h4 class="teal-text center">Enter your addresses</h4>

<div class="row">
  <div class="col s12 m6 l6 offset-l3 offset-m3">
    <%= simple_form_for(@address, url: wizard_path(:enter_address), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
        <div class="form-inputs">
          <div class="row">
            <div class="col s12">
              <%= f.input :address_line_1, autofocus: true, placeholder: 'Please enter address line 1', input_html: { class: 'materialize-textarea' } %>
            </div>
            <div class="col s12">
              <%= f.input :address_line_2, placeholder: 'Please enter address line 2 (Optional)', input_html: { class: 'materialize-textarea' } %>
            </div>
            <div class="col s12">
              <%= f.input :city, placeholder: 'Please enter your city' %>
            </div>
            <div class="col s12">
              <%= f.input :state, placeholder: 'Please enter your state' %>
            </div>
            <div class="col s12">
              <%= f.input :country, input_html: { value: 'India' }, placeholder: 'Please enter your country', readonly: true %>
            </div>
            <div class="col s12">
              <%= f.input :pincode, placeholder: 'Please enter your pincode' %>
            </div>
            <br>
          </div>
        </div>

        <br>

        <div class="form-actions right">
          <%= f.button :submit, "Submit" %>
        </div>
        <% end %>
  </div>
</div>